<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">

<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  </table>
  

  <div class="row">
    <%= link_to edit_user_path(@user) do %>
    <div class="btn btn-outline-secondary btn-block edit_user_112075">
      <i class="fas fa-user-cog" aria-hidden="true">
      </i>
    </dvi>
    <% end %>
  </div>
</div>








<h2 class="mt-3">New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



  
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      

    <%= f.submit 'Create Book', class: "btn btn-block btn-success" %>
  <% end %>

</div>





<div class="col-md-8 offset-md-1">

<h1>Books</h1>
  <% @books.each do |book| %>
    <div>
      <%= link_to user_path(book.user.id) do %>
      <p>image: <%= image_tag book.user.profile_image, size: "100x100" %></p>
      <% end %>
      <p><%= link_to book.title, book_path(book) %></p>
      <p>Opinion: <%= book.body %></p>
      <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
    </div>
  <% end %>


