<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
        <%= form_with model: @book, url: book_path(@book)  do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, class: "form-control book_title"%>
        </div>
        
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_field :body , class: "form-control book_body"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" , class: "btn btn-success"%>
        </div>
      <% end %>
      <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>
    </div>
  </div>
</div>


