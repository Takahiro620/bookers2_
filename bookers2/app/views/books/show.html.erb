<!-- ユーザーの詳細 -->

<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  </table>
  

  <div class="row">
    <%= link_to edit_user_path(@user) do %>
    <div class="btn btn-outline-secondary btn-block edit_user_112075">
      <i class="fas fa-user-cog" aria-hidden="true">
      </i>
    </dvi>
    <% end %>
  </div>


</div>



<h2 class="mt-3">New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



  
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      

    <%= f.submit 'Create Book', class: "btn btn-block btn-success" %>
  <% end %>

</div>








<div class="col-md-8 offset-md-1">

<div>
  <h1>Book detail</h1>
  <p>Title：<%=link_to @books.title, book_path(@books) %></p>
  <p>Opinion：<%= @books.body %></p>
  <%= link_to user_path(@books.user.id) do %>
  <%= image_tag @books.user.get_profile_image(100,100) %>
  <%= @books.user.name %>
  <% end %>
  <% if @books.user == current_user %>
    <p><%= link_to "Edit", edit_book_path(@books) %></p>
    <%= link_to "Destroy", book_path(@books), method: :delete %>
  <% end %>
</div>

 
  <% if @books.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(@books), method: :delete do %>
        <i class="fa-solid fa-heart"></i><%= @books.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(@books), method: :post do %>
        <i class="fa-regular fa-heart"></i><%= @books.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>



<div>
  <p>コメント件数：<%= @books.book_comments.count %></p>
  <% @books.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
    <%= book_comment.user.name %>
    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@books, @book_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>




</div>
</div>
</div>